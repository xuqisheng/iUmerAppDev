/* pages/quickAppoint/appointPersonnel.wxss */
page {
	overflow: scroll;
}
button {
	line-height: 50rpx;
}
.line-through {
  text-decoration: line-through;
  font-size: 80%;
  margin-left: 10rpx;
}
.cell-project-price {
	position: static !important;
}
.cell-project-price:after {
	right: 18px !important;
}
.weui-label {
    margin-bottom: 0;
    font-weight: 100;
}
.arrow-down {
	border-width: 0 2px 2px 0 !important;
	border-color: #c8c8cd;
	border-style: solid;
	display: inline-block;
	height: 6px;
	width: 6px;
	transform: matrix(.71,.71,-.71,.71,0,0);
}
.dropdown {
	position: static;
}
.selected-price {
	color: red;
}
.selected-price text {
	/*margin-left10rpx;*/
	color: gray;
	text-decoration: line-through;
  font-size: 80%;
}
.dropdown button {
	border: none;
	background: none;
}
.dropdown-menu {
	width:100%;
	position:absolute;
	text-align:left;
	left:0;
	top:100%;
	background-color:white;
	z-index:1000;
	border: solid 1px #F7F7F7;
}
.dropdown-menu .divider {
	border-top: solid 1px #F7F7F7;
}
.price-item-icon-sale {
	color: red;
}
.price-item-icon-original {
	margin-left: 10rpx;
	text-decoration: line-through;
	font-size: 80%;
}
.project-item {
	background-color: white;
	font-family: SimHei;
  padding: 20rpx;
}
.project-item-name {
  font-size: bold;
}
.project-item>view {
  padding: 4rpx 0;
}
.project-item-price {
  color: #FF0074;
  font-size: 110%;
}
.project-item-duration {
  background-color: #FF0074;
  color: white;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-size: 90%;
}
.chosen-personnel span {
    display: flex;
    align-items: center;
}
.chosen-personnel image {
	width: 50rpx;
	height: 50rpx;
	margin-left: 10rpx;
  border: solid 2rpx #E4E4E4;
  border-radius: 8rpx;
}
.selection-area {
	margin-top: 20rpx;
	font-family: SimHei;
    background-color: white;
}
.selection-cell {
    padding: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
	position: relative;
}
.selection-cell:not(:last-child) {
    border-bottom: solid 2rpx #F7F7F7;
}
.selection-cell__bd {
    flex: 1;
}
.selection-cell__ft {
    padding-right: 26rpx;
	display:flex;
	align-items:center;
}
.selection-cell_access::after {
    content: " ";
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #c8c8cd;
    border-style: solid;
    transform: matrix(.71,.71,-.71,.71,0,0);
    position: relative;
    top: 2rpx;
    margin-top: -8rpx;
    right: 4rpx;
}
.date-select {
	height: 100rpx;
	overflow: scroll;
	display: flex;
	width: 100%;
	white-space: nowrap;
	justify-content: space-between;
}
.date-select-on {
	border-bottom: solid 4rpx #FF0074;
}
.swiper-slide {
	padding: 0 40rpx 10rpx 40rpx;
    display: inline-block;	
}
.timeslots {
    display: flex;
	flex-wrap: wrap;	
    justify-content: flex-start;
   	margin-top: -20rpx;
   	padding: 0 20rpx 20rpx 20rpx;
}
button.timeslot {
	border-radius: 0;
}
button.timeslot::after {
	border: none;
}
.timeslot {
	width: 20%;
	border: solid 1px lightgrey;
	padding: 20rpx 0;
	background-color: white;
	margin: -0.5px;
	outline: none;
	position: relative;
}
.reserved {
	position: absolute;
	right: 0;
	top: 0;
	background-image: url("https://www.iumer.cn/umer/css/image/wechat/reserved@2x.png");
	background-size: 60rpx 60rpx;
	background-repeat: no-repeat;
	width: 60rpx;
	height: 60rpx;
}
.disabled {
	background-color: #EEEEEE;
}
.timeslot-selected {
    background-color: #FF0074;
    color: white;
}
.input-area {
	margin-top: 20rpx;
	font-family: SimHei;	
	background-color: white;
}
.input-cell {
	display: flex;
	align-items: center;
	padding: 20rpx;
}
.input-cell:not(:last-child) {
	border-bottom: solid 2rpx #F7F7F7;
}
.no-border-bottom {
  border-bottom: none !important;
}
.price-selection {
  padding: 20rpx;
	position: relative;
  border-bottom: solid 2rpx #F7F7F7;
}
radio-group {
  display: flex;
  align-items: center;
  font-size: 90%;
}
.radio-group-activity {
  display: flex;
  align-items: flex-start;
  font-size: 90%;
  flex-direction: column;
  justify-content: center;
}
radio-group radio:nth-child(2) {
  margin-left: 10rpx;
}
.reserve-label {
	width: 30%;
}
#payment-type-area {
  margin-top: 20rpx;
}
.payment-type-cell {
    padding: 20rpx;
    background-color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: solid 2rpx #F7F7F7;
}
.payment-type-cell-hd {
    display: flex;
    align-items: center;
}
.payment-type-cell-hd image {
    width: 40rpx;
    height: 40rpx;
    padding-right: 10rpx;
}
.payment-type-cell-ft {
    width: 65%;
    display: flex;
    justify-content: flex-end;
}
.payment-type-cell-ft-circle {
    width: 55rpx;
    height: 55rpx;
    border: solid 2rpx #F7F7F7;
    border-radius: 100%;
}
.circle-on {
  background-image: url("https://www.iumer.cn/umer/css/image/wechat/app/selected-round@2x.png");
  background-size: 80rpx;
  background-repeat: no-repeat;
  background-position: center;
}
.btn-area {
	margin-top: 100rpx;
  position: fixed;
  bottom: 0; 
  left: 0;
  right: 0;
  z-index: 999;
  background-color: #666666;
}
.btn-price {
  color: white;
  padding: 0 20rpx;
}
.btn-confirm {
  background-color: #FF0074;
  padding: 25rpx 50rpx;
  color: white;
  font-family: SimHei;
  text-align: center;
  float: right;
}
