page {
	height: 100%;
}
.container {
	height: 100%;
}
.no-data image {
	width: 75%;
	height: calc(750rpx / 742 * 278 * 0.75);
  margin-top: -100rpx;
}
.no-data text {
	margin-top: 45rpx;
}
.red {
	color: #e84057 !important;
	border: solid 2rpx #e84057 !important;
}
.filter-list-item-active {
	background-image: url("../../image/wechat/app/tick.png");
	background-repeat: no-repeat;
	background-position: right center;
    background-size: 50rpx;
}
.filter {
  display: flex;
	justify-content: space-between;
	position: relative;
	z-index: 200;
}
.filter-item {
	border-top: solid 2rpx #CFCFCF;
	border-right: solid 2rpx #CFCFCF;
	border-bottom: solid 2rpx #CFCFCF;
	width: 50%;
	text-align: center;
	background-color: white;
}
.filter-item-active {
	color: #FF0074;
	border-top: solid 2rpx #CFCFCF;
	border-right: solid 2rpx #CFCFCF;
	border-bottom: solid 2rpx #CFCFCF;
	width: 50%;
	text-align: center;
	background-color: white;
}
.filter-item-inner {
	padding: 20rpx 40rpx;
	position: relative;
}
.filter-text-active {
	color: #FF0074;
}
.filter-item-triangle {
	position: absolute; 
	right: 5rpx; 
	bottom: 5rpx; 
	width: 0; 
	height: 0; 
	border-bottom: 24rpx solid #CFCFCF; 
	border-left: 24rpx solid transparent;
}
.filter-item-triangle-active {
	position: absolute; 
	right: 5rpx; 
	bottom: 5rpx; 
	width: 0; 
	height: 0; 
	border-bottom: 24rpx solid #FF0074; 
	border-left: 24rpx solid transparent;
}
.filter-item-list {
	position: absolute;
	width: 100%;
/* 	height: 100%; */
	background-color: white;
	top: 100%;
	left: 0;
	border: solid 2rpx #F7F7F7;
	z-index: 1000;
	/* max-height: 400px; */
}
.filter-item-list-area {
	width: 100%;
}
.filter-item-list-items {
	overflow: scroll;
	max-height: 800rpx;
}
.filter-item-list-item {
	padding: 20rpx 20rpx;
	color: #111111;
	font-weight: bold;
	border-bottom: solid 2rpx #F7F7F7;
	text-align: left;
	width: 25%;
}
.filter-item-list-sorting .filter-item-list-item {
    display: flex;
    align-items: center;
	width: calc(100% - 40rpx);
}
.filter-item-list-sorting .filter-item-list-item image {
	width: 30rpx;
	height: 30rpx;
	margin-right: 20rpx;
}
.filter-item-sublist {
	position: absolute;
	left: 30%;
	top: 0;
	width: 70%;
	background-color: white;
	height: calc(100%);
	outline: solid 2rpx #F7F7F7;
	z-index: 2000;
	overflow: scroll;
}
.filter-item-sublist-item {
	padding: 20rpx;
	border-bottom: solid 2rpx #F7F7F7;
}
.filter-item-list-item-end {
	border-top: solid 2rpx #F7F7F7;
	background-color: white;
	display: flex;
	align-items: center;
	justify-content: center;
}
.filter-item-area .filter-item-list-item-end {
    border-bottom: solid 2rpx #F7F7F7;
	position: fixed;
	width: 100%;
}
.filter-item-list-item-end image {
	width: 50rpx;
    height: 20rpx;
	margin: 10rpx;
}
.filter-item-list-items-category {
  display: flex;
	flex-wrap: wrap;	
  padding: 10rpx 0 10rpx 5rpx;
}
.filter-item-list-item-category {
	width: 22%;
  padding: 10rpx;
	white-space: nowrap;
}
.filter-item-list-item-category text {
	border-radius: 8rpx;
	border: solid 2rpx lightgrey;
  color: #393939;
  padding: 10rpx;
  display: block;
  font-size:95%;
}
.filter-list-item-on {
	background-image: url("https://www.iumer.cn/umer/css/image/wechat/app/tick.png");
	background-repeat: no-repeat;
	background-position: right center;
  background-size: 45rpx 45rpx;
}
.filter-list-item-on-pink {
	color: #FF0074;
}
.filter-list-item-category-on {
	border: solid 2rpx #FF0074 !important;
	color: #FF0074 !important;
}
#personnel-area {
	height: calc(100% - 84rpx);
}
.people-item {
	background-color: white;
	display: flex;
	justify-content: space-between;
	font-family: "-apple-system" ;
	border-top: solid 2rpx #F7F7F7;
  padding: 10rpx;
}
.people-item:first-child {
	margin-top: 10rpx;
}
.people-item-left {
	width: 150rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction:column;
	margin-right: 20rpx;
}
.people-item-left .people-item-img {
	display: flex;
	align-items: center;
}
.people-item-left .people-item-img image {
	width: 130rpx;
	height: 130rpx;
  border: solid 2rpx #E4E4E4;
  border-radius: 8rpx;
}
.people-item-right {
	width: 100%;
	padding: 10rpx 0 10rpx 0;
}
.people-item-right .star {
	display: flex;
	margin-top: 10rpx;
}
.people-item-right .star image {
	width: 28rpx;
	height: 28rpx;
}
.people-item-right .star view:not(:first-child) image {
	padding-left: 5rpx;
}
.people-item-right .star-txt {
  margin-left: 10rpx;
}
.people-item-name {
	color: #343434;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	width: 100%;
  font-size: 108%;
}
.people-item-place {
	color: #414141;
}
.people-item-dot-line {
	margin-right: 40rpx;
	background-image: url('https://www.iumer.cn/umer/css/image/wechat/dotted-line@2x.png');
	width: 100%;
	height: 2rpx;
	background-size: 100% 100%;
	background-repeat: no-repeat;
}
.people-item-info {
	display: flex;
	justify-content: space-between;
}
.people-item-info-distance {
	color: #777777;
	display: flex;
	align-items: center;
  font-size: 90%;
}
.people-item-info-distance image {
	width: 30rpx;
	height: 40rpx;
	margin: 0 10rpx 0 0;
}
.people-item-info-board-comment {
	display: flex;
}
.people-item-info-comment {
	color: #686868;
	display: flex;
	align-items: center;
}
.people-item-info-comment image {
	width: 30rpx;
	height: 30rpx;
	margin: 0 10rpx;
}
.people-item-info-board {
	color: #686868;
	display: flex;
	align-items: center;
}
.people-item-info-board image {
	width: 30rpx;
	height: 30rpx;
	margin: 0 10rpx;
}