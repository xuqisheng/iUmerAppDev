/**app.wxss**/
.clear {
  clear:both;
}
.text-center {
	text-align: center;
}
.flex {
  display: flex;
  align-items: center;
}
.flex-space-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
page {
  background-color: #F7F7F7;
}
.container{
	font-size: 30rpx;
	background-color: #F7F7F7;
	font-family: "-apple-system";
}
#top-menu {
  display: flex;
	padding: 0 20rpx;
	background-color: #E84057;
	color: white;
	justify-content: space-between;
	align-items: center;
	height: 96rpx;
}	
.top-menu-back {
	background-image: url('https://www.iumer.cn/umer/css/image/wechat/reply@3x.png');
	background-Size: 50rpx 50rpx;
	background-repeat: no-repeat;
	height: 50rpx;
	width: 50rpx;
}
.top-menu-title {
	height: 40rpx;
  display: flex;
	align-items: center;
}
.weui-mask {
	background:rgba(0,0,0,.6);
	position:fixed;
	z-index:1000;
	top: 96rpx;
	right:0;
	left:0;
	bottom:0;
}
.load-more {
	padding: 30rpx 0;
}
.no-data {
	background-color: white;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	height: 100%;
  float: left;
  width: 100%;
}